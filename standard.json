    "properties": {
      "message_type": {
        "type": "string"
      },
      "data": {
        "type": "object",
        "properties": {
          "emitter": { "type": "string" },
          "receiver": { "type": "string" },
          "sensor_id": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        }
      }
    }
